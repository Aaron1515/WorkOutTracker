<div class="container">
  <div class="page-header">
    <h1><small>Add a workout for</small> <%= @user.name.capitalize %></h1>
  </div>



  <%= form_for [@user, @workout] do |f| %>

    <%= f.label :phase %>
    <%= f.select(:phase, options_for_select([
      [1,1],
      [2,2],
      [3,3],
      [4,4]])) %>

    <%= f.label :day %>
    <%= f.select(:day, options_for_select([
      [1,1],
      [2,2],
      [3,3],
      [4,4]])) %>

    <%= f.label :name %>
