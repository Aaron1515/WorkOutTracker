<%= form_for @user, html: { multipart: true } do |f| %>

  <%= f.label :avatar %>
  <%= f.file_field :avatar %>
  <br>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <br>
  <%= f.label :password_confirmation, "Confirmation" %>
  <%= f.password_field :password_confirmation %>
  <br>
  <%= f.submit "Save changes" %>
  <br>
  <%= link_to 'Back', users_path %>
<% end %>
