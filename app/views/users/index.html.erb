<% if current_user && current_user.admin? %>

  <!-- Flash message when successfully updating/destroying a user -->
  <%= render 'flash_message' %>
  <!-- End of flash message -->

<h1>All clients</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<% @users.each do |user| %>
  <tr>
    <td><%= link_to "#{user.name.capitalize}", user %></td>
    <td><%= user.email %></td>
    <td><%= link_to edit_user_path(user) do %>
          <i class="glyphicon glyphicon-pencil"></i>
        <% end %>
    </td>
    <td><%= link_to user, method: :delete,
                          data: { confirm: 'Are you sure?'} do %>
          <i class="glyphicon glyphicon-remove"></i>
        <% end %>                    
    </td>
  </tr>
<% end %>
</table>

<% end %>